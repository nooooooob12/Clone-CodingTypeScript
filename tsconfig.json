{
    "include": ["src"],
    "compilerOptions": {

        "outDir": "build", // 배포? 컴파일 하는 파일의 디렉토리를 어디로 저장할건지!

        "target": "ES6", //build되는 파일의 버전

        "lib" : ["ES6","DOM"], // 목표로 하는 실행 환경을 나타낸다. 즉, 내 코드가 어디에서 동작할지 정하는 단계
                              //첫번째는 버전, 두번째는 실행되는 환경을 지정하는 방식.
                             //실행환경을 지정하면, typescript는 그 환경에서의 동작 메서드들을 모두 다 불러올 수 있게 됌

        "strict":true, // 모든 검사 옵션을 활성화, 엄격하게 검사하기 때문에 정확성이 높아짐?
                   
        "allowJs": true
    }   
}